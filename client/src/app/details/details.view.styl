* 
    margin 0
    padding 0

body
    background #DD9
    

.content
	width 980px
	margin 10px auto
	position relative
	background-color #ffffff
	border-radius 5px
	border 1px solid black
	box-shadow 0 0 8px 2px #000
    

.gallery
	width 40%
	position relative
	display inline-block
	box-sizing border-box
	padding-top 10px
	padding-left 10px
  

.specification 
	width 60%
	position relative
	float right 
	display inline-block
	padding 15px 15px 10px 30px
	border-right 1px solid #eaeaea
    border-bottom 1px solid #eaeaea
	

.large-image 
	width 100%
	display block

.large-image img 
	width 100%

.gallery ul 
	display block


.gallery ul li 
	display inline-block
	width 20%
	padding-top 5px
	marging-top 15px
	

.gallery ul li img 
	width 100%	

.gallery ul li:hover 
	border 2px solid rgba(135, 242, 123, .5)


.reviews
    width 100%
    position relative
	

.reviews section
    width 100%
    position relative

.get_reviews
    width 100%
    position relative
    padding-left 40px


.comment-wrapper
    width 100%
    box-sizing border-box
    position relative

.comment-author
    display inline-block
    width 20%

.comment-rating
	display inline-block
	width 20%

.comment-text
	position reletive
	width 100%


.comment-date
    width 25%
	display inline-block
    position reletive
    float right

	
  





.detail-add-review-f 
    padding 2em 
    width 25em
    margin 0 auto 
    background-color #EFD
    margin-top 1.5em
    margin-bottom 2em


.f-i 
    margin-bottom 0.5em

.pp-comments-review-star-wrap 
    width 16em
    margin -5px auto 3em

.detail-add-review-stars 
    display inline-block
    margin-right 0.7em
    vertical-align middle

.detail-add-review-stars-i 
    background-image url('data:image/png;base64,') 
    background-repeat no-repeat
    width 39px
    height 37px

.detail-add-review-stars-i:hover 
    background-image url('data:image/png;base64,')
    background-repeat no-repeat
    width 39px
    height 37px

.pp-comments-review-star-big 
    color #999
    font-size 0.8em
    position relative
    background-origin content-box
    padding -1px 1.2em
    cursor pointer

.detail-add-review 
    background #f6f6f6
    border 1px solid #ededed
    border-bottom 0
    box-shadow inset 0 -3px 0 0 #c5c5c5, 3px 3px 7px 0 rgba(200, 200, 200, .5)
    border-radius 3px

.detail-add-review-stars-i 
    float left

.pp-comments-f-i-indent 
    margin-bottom 1.5em

.detail-add-review-f-i-title-vert 
    font-size 1.2em
    margin-bottom 0.2em

.pp-comments-addictional-textarea
    height 2.3em
    width 100% 


.detail-add-review-input-textarea
	width 100% 

.input-text 
	width 100% 

.inline 
    display inline-block

.detail-add-review-submit 
    border-radius 3px
    margin-left 2.3em

.detail-add-review-submit .btn-link-i 
    font-size 1.4em
    padding 0.5em 1em 0.5em
    line-height 1em
    border-radius 3px
    border 1px solid #ededed
