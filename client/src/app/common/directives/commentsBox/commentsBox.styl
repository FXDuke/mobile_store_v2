.comments
	width 760px
	margin 0 auto
	.row
		margin 0

.comment-wrapper
	float left
	width 100%
	border-top 1px solid #ebebeb
	padding 20px 0
	min-height 90px
	&:first-child
		border none
	.comment-name
		font-weight bold
		text-transform uppercase
		margin-bottom 3px
	.comment-date
		color #999999
		font-size 13px
	.comment-text
		font-style italic