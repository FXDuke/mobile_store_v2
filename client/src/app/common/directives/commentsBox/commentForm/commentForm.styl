.form-container 
	position relative
.commentForm-wrapper
	padding 20px 30px
	border 4px solid rgba(101,0,29,0.1)
	border-radius(3px)
	margin-bottom 20px
	position absolute
	width 100%
	top 0
	background white
	visibility hidden
	opacity 0
	transition(opacity .3s,visibility .3s)

	.title
		margin-bottom 20px
		span
			font-weight bold
			font-size 18px	
	.closeIcon
		float right
	input, textarea
		border none
		background rgba(101,0,29,0.1)
		padding 10px
		border-radius(0px)
		width 100%
		margin-bottom 15px
	textarea
		resize none
		height 150px
	.comment-label
		margin-bottom 5px	
	.addComment
		background btnColor
		color white		
		width 100%
.commentForm-wrapper.active
	visibility visible
	opacity 1

.description
	p
		margin-bottom 20px
	p:last-child
		margin-bottom 0
.btn.openCommentForm
	border 2px solid blueBtnColor
	color blueBtnColor
	width 300px
	padding 10px
	margin 20px auto
	
.btn.openCommentForm.active,
.btn.openCommentForm:hover
	color btnColor
	border 2px solid btnColor