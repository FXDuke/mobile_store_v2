.slideshow-phone
	width 450px
	height 350px
	margin-right 30px
	float left
	overflow hidden
	.slides		
		height 100%		
		.slide-img
			position relative
			width 450px
			height 100%
			img 
				position absolute
				top 0
				left 0
				bottom 0
				right 0
				margin auto
				max-width 100%
				max-height 100%

.controls
	position relative
	.arrow
		position absolute
		font-size 24px
		background btnColor
		color white	    
		border-radius(3px)
		cursor pointer
		top 155px
	.prev
		left 0
		padding: 10px 13px 8px 10px
	.next 
		right 0
		padding: 10px 10px 6px 13px

		